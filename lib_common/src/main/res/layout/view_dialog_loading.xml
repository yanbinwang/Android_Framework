<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.common.widget.ProgressWheel
        android:layout_width="160mm"
        android:layout_height="160mm"
        android:paddingTop="40mm"
        wheel:matProg_barColor="@color/blue_2e60df"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20mm"
        android:layout_marginTop="10mm"
        android:paddingLeft="50mm"
        android:paddingRight="50mm"
        android:text="@string/label_loading"
        android:textColor="@color/blue_2e60df"
        android:textSize="26mm" />

</LinearLayout>