<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120mm"
    android:background="@color/gray_f7f7f7">

    <TextView
        android:id="@+id/tv_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_keyboard_selector"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/grey_333333"
        android:textSize="52mm" />

    <RelativeLayout
        android:id="@+id/rl_keyboard_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="140mm"
            android:layout_height="60mm"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_keyboard_delete" />

    </RelativeLayout>

</RelativeLayout>