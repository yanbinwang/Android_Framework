<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_2e60df"
    android:padding="20mm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:background="@color/black"
            android:text="渐隐-进入"
            android:textColor="@color/white"
            android:textSize="32mm" />

        <Button
            android:id="@+id/btn_test2"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:layout_marginTop="20mm"
            android:background="@color/black"
            android:text="渐隐-退出"
            android:textColor="@color/white"
            android:textSize="32mm" />

        <Button
            android:id="@+id/btn_test3"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:layout_marginTop="20mm"
            android:background="@color/black"
            android:text="弹出-进入"
            android:textColor="@color/white"
            android:textSize="32mm" />

        <Button
            android:id="@+id/btn_test4"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:layout_marginTop="20mm"
            android:background="@color/black"
            android:text="弹出-退出"
            android:textColor="@color/white"
            android:textSize="32mm" />

        <Button
            android:id="@+id/btn_test5"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:layout_marginTop="20mm"
            android:background="@color/black"
            android:text="GPS检测设置"
            android:textColor="@color/white"
            android:textSize="32mm" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="200mm"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:visibility="gone" />

<!--    <com.amap.api.maps.MapView-->
<!--        android:id="@+id/map"-->
<!--        android:visibility="gone"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->

</RelativeLayout>
