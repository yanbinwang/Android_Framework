        android:padding="20mm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_test"
                android:layout_width="match_parent"
                android:layout_height="80mm"
                android:background="@color/black"
                android:text="渐隐-进入"
                android:textColor="@color/white"
                android:textSize="32mm" />

            <Button
                android:id="@+id/btn_test2"
                android:layout_width="match_parent"
                android:layout_height="80mm"
                android:layout_marginTop="20mm"
                android:background="@color/black"
                android:text="渐隐-退出"
                android:textColor="@color/white"
                android:textSize="32mm" />

            <Button
                android:id="@+id/btn_test3"
                android:layout_width="match_parent"
                android:layout_height="80mm"
                android:layout_marginTop="20mm"
                android:background="@color/black"
                android:text="弹出-进入"
                android:textColor="@color/white"
                android:textSize="32mm" />

            <Button
                android:id="@+id/btn_test4"
                android:layout_width="match_parent"
                android:layout_height="80mm"
                android:layout_marginTop="20mm"
                android:background="@color/black"
                android:text="弹出-退出"
                android:textColor="@color/white"
                android:textSize="32mm" />

            <Button
                android:id="@+id/btn_test5"
                android:layout_width="match_parent"
                android:layout_height="80mm"
                android:layout_marginTop="20mm"
                android:background="@color/black"
                android:text="GPS检测设置"
                android:textColor="@color/white"
                android:textSize="32mm" />

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="800mm"
                android:layout_height="800mm"
                android:layout_gravity="center"
                android:layout_marginTop="20mm" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="match_parent"
            android:layout_height="200mm"
            android:layout_alignParentBottom="true"
