<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_f7f7f7"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_999999"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <View style="@style/lineWidth" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="80mm"
            android:layout_height="40mm"
            android:layout_gravity="end"
            android:layout_margin="20mm"
            android:src="@mipmap/img_keyboard_close" />

    </LinearLayout>

</RelativeLayout>