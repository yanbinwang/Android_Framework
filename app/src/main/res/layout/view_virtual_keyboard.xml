<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View style="@style/lineWidth" />

        <RelativeLayout
            android:id="@+id/rl_keyboard_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_f7f7f7"
            android:padding="20mm">

            <ImageView
                android:layout_width="80mm"
                android:layout_height="40mm"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_keyboard_back" />

        </RelativeLayout>

        <View style="@style/lineWidth" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_999999"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </LinearLayout>

</RelativeLayout>