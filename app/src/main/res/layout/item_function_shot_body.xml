<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="48mm"
    android:paddingVertical="40mm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="24mm"
            android:layout_height="24mm"
            android:src="@mipmap/ic_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14mm"
            android:text="操作说明"
            android:textColor="@color/blue_1e2b8e"
            android:textSize="36mm"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_explain"
        android:layout_width="656mm"
        android:layout_height="1108mm"
        android:layout_gravity="center"
        android:layout_marginTop="32mm"
        android:src="@mipmap/img_shot_bg" />

</LinearLayout>
