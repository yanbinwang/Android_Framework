<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f7f7f7">

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:layout_margin="10mm"
        android:background="@color/white"
        android:hint="请输入密码"
        android:inputType="numberDecimal"
        android:paddingHorizontal="20mm"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_333333"
        android:textSize="28mm" />

    <com.dataqin.testnew.widget.keyboard.VirtualKeyboardView
        android:id="@+id/vk_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>