<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/pv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="16mm"
        android:paddingVertical="10mm">

        <ImageView
            android:id="@+id/iv_take"
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_start_video" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_switch" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="93mm">

        <LinearLayout
            android:id="@+id/ll_main_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40mm"
                android:layout_height="40mm"
                android:layout_marginHorizontal="20mm"
                android:src="@mipmap/ic_cancel" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>