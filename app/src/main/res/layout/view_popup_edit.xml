<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100mm"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20mm">

            <EditText
                android:id="@+id/et_container"
                android:layout_width="0dp"
                android:layout_height="80mm"
                android:layout_weight="1"
                android:background="@drawable/shape_grey"
                android:ellipsize="end"
                android:hint="输入内容"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                android:paddingHorizontal="30mm"
                android:singleLine="true"
                android:textColor="@color/grey_333333"
                android:textColorHint="@color/grey_666666"
                android:textSize="28mm" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="20mm"
            android:text="发送"
            android:textColor="@color/blue_0d86ff"
            android:textSize="32mm" />

    </LinearLayout>

</RelativeLayout>