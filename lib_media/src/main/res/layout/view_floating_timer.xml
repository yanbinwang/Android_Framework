<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="20mm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_time_tick"
        android:gravity="center"
        android:paddingHorizontal="20mm"
        android:paddingVertical="10mm">

        <ImageView
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10mm"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36mm"
            tools:text="00:00:00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10mm"
        android:background="@drawable/shape_time_tick"
        android:gravity="center"
        android:padding="10mm">

        <ImageView
            android:layout_width="40mm"
            android:layout_height="40mm"
            android:src="@mipmap/ic_media_shot" />

    </LinearLayout>

</LinearLayout>