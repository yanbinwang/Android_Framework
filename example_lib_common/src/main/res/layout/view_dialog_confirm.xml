<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_container_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="600mm"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10mm">

        <TextView
            android:id="@+id/dialog_tip_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20mm"
            android:textColor="@color/grey_333333"
            android:textSize="36mm"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="20mm"
            android:padding="20mm"
            android:textColor="@color/grey_333333"
            android:textSize="28mm" />

        <View style="@style/lineWidth" />

        <TextView
            android:id="@+id/dialog_sure_txt"
            android:layout_width="match_parent"
            android:layout_height="80mm"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue_2e60df"
            android:textSize="32mm" />

    </LinearLayout>

</LinearLayout>