<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/deep_black</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/child_title</item>
        <!-- Window color -->
        <item name="android:windowBackground">@color/bg_white</item>
        <!-- edittext等的光标和选中图标颜色 -->
        <item name="colorAccent">@color/child_title</item>
        <!--&lt;!&ndash; 在安卓4.0及一下版本里去除掉toolbar中按键的点击效果 &ndash;&gt;-->
        <item name="selectableItemBackground">@null</item>
    </style>

    <!-- animation 样式（切换activity时调用） -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- 布局画高线样式 -->
    <style name="line_hight">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/share_line</item>
    </style>

    <!-- 布局画横线样式 -->
    <style name="line_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/share_line</item>
    </style>

    <!-- 自定义提示框背景 -->
    <style name="MyDialogDelect" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/tran</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 数据请求的动画样式 -->
    <style name="LoadingStyle" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/loading_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 去除标题头等多余的部分 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/tran</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 提示框背景颜色 -->
        <item name="android:background">@color/really_white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 标题颜色 -->
        <item name="android:textColor">@color/deep_black</item>
        <!-- 内容颜色 -->
        <item name="android:textColorPrimary">@color/deep_black</item>
        <!-- 确认取消按钮的颜色 -->
        <item name="colorAccent">@color/btn_font_blue</item>
    </style>

</resources>
