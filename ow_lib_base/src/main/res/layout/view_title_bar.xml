<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rel"
    android:layout_width="match_parent"
    android:layout_height="93mm"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_left_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_left_img"
                android:layout_width="15mm"
                android:layout_height="24mm"
                android:layout_marginLeft="40mm"
                android:layout_marginRight="40mm"
                android:src="@mipmap/ic_btn_back" />

            <TextView
                android:id="@+id/main_left_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40mm"
                android:layout_marginRight="40mm"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/grey_333333"
                android:textSize="28mm"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_right_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/main_right_img"
                android:layout_width="30mm"
                android:layout_height="30mm"
                android:layout_marginLeft="40mm"
                android:layout_marginRight="40mm" />

            <TextView
                android:id="@+id/main_right_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40mm"
                android:layout_marginRight="40mm"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/grey_333333"
                android:textSize="28mm"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/main_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="10"
        android:textColor="@color/grey_333333"
        android:textSize="32mm" />

    <View
        android:id="@+id/main_line"
        style="@style/lineWidth"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>